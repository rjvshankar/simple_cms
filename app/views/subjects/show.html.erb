<% @page_title = 'Subjects Show' %>

<%= link_to('<< Back to List', {:action => 'index'}, :class => 'back-link') %>

<div class="subjects show">
  <h2>Show Subject</h2>

  <table summary="Subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @subject.created_at.strftime('%b %d %Y, %I:%M:%S %p %Z') %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @subject.updated_at.strftime('%b %d %Y, %I:%M:%S %p %Z') %></td>
    </tr>
  </table>

</div>